# RAG Chatbot Configuration

# Storage Configuration
STORAGE_DIR=./storage
VECTOR_BACKEND=chroma
SQLITE_FILENAME=storage_meta.sqlite

# Optional: Custom vector settings (JSON format)
# VECTOR_SETTINGS={"collection_name": "documents", "distance_metric": "cosine"}

# Embedding Configuration
EMBEDDER_TYPE=mock  # Options: mock, openai, sentence_bert
# For OpenAI embeddings:
# OPENAI_API_KEY=your_openai_api_key_here
# EMBEDDER_TYPE=openai

# LLM Configuration
LLM_PROVIDER=mock  # Options: mock, openai, anthropic, groq
# For OpenAI:
# OPENAI_API_KEY=your_openai_api_key_here
# LLM_PROVIDER=openai
# For Anthropic:
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# LLM_PROVIDER=anthropic
# For Groq (fast inference):
# GROQ_API_KEY=your_groq_api_key_here
# LLM_PROVIDER=groq

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE=50MB

# OCR Configuration
OCR_PROVIDER=local  # Options: local, cloud
# For local OCR, ensure Tesseract is installed
# For cloud OCR, configure your cloud provider

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development/Production
ENVIRONMENT=development
DEBUG=true
